    "node-fetch": "^2.2.0",
    "node-schedule": "^1.3.0",
    "node-telegram-bot-api": "^0.30.0",
    "npm-run-all": "^4.1.3",
    "query-string": "^6.2.0",
    "signale": "^1.3.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.9",
    "@types/dateformat": "^1.0.1",
    "@types/dotenv": "^4.0.3",
    "@types/lodash": "^4.14.117",
    "@types/node-schedule": "^1.2.2",
    "@types/node-telegram-bot-api": "^0.30.3",
    "@types/query-string": "^6.1.1",
    "@types/signale": "^1.2.0",
