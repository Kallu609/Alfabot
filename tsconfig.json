{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017.string"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@logger": [
        "shared/logger"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}